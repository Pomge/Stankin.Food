<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="?attr/selectedTabColor" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="?attr/strokeTabColor" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="?attr/unselectedTabColor" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="?attr/strokeTabColor" />
        </shape>
    </item>
</selector>